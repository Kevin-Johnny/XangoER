import numpy as np

def calcular_deformacoes(momento_fletor, comprimento, modulo_elasticidade, momento_inercia):
    deformacoes = (momento_fletor * comprimento) / (modulo_elasticidade * momento_inercia)
    return deformacoes

modulo_elasticidade_aco_1020 = 200e9  

diametro_polegadas = 1  
espessura_polegadas = 1.6  

diametro_metros = diametro_polegadas * 0.0254  
espessura_metros = espessura_polegadas * 0.0254  

momento_inercia = (np.pi / 64) * (diametro_metros**4 - (diametro_metros - 2 * espessura_metros)**4)

comprimento_viga = 5.0  # 5 metros

forca = 500  

posicao_carga = comprimento_viga / 2
momento_fletor = forca * posicao_carga

deformacoes = calcular_deformacoes(momento_fletor, comprimento_viga, modulo_elasticidade_aco_1020, momento_inercia)

if deformacoes <= 0:
    print("Condição: Aprovada (deformação elástica).")
else:
    print("Condição: Reprovada (deformação plástica).")

# Revisar as formulas
# Condição de teste para 500N: Ok!
# A titulo de informação a força está em N, o tubo é de perfil circular dado em polegadas, mas converto para metros logo no começo.
